@model List<BasherBlog.Models.User>;


@{
    ViewData["Title"] = "User";


}

<h1>Users</h1>

<div class="Container my-3 ">
    <h1 class="text-primary text-center  my-5 display-6">Register User</h1>
    <div class="row">
        <div class="col-lg-12 border border-Danger border-5 mx-auto">

            <table class="table table-bordered text-center">

                <tr>
                    <th colspan="8">
                        <a class="btn btn-success link-light display-5 text-decoration-none align-self-center" asp-controller="Account" asp-action="Register"> Create </a>
                    </th>

                </tr>

                <tr>
                    <th> Sr#</th>
                    <th> Name</th>
                    <th> Email</th>
                    <th> Phone No</th>
                    <th> IsConfirmed</th>
                    <th> Joined-On</th>
                    <th> Role</th>
                    <th> Action</th>

                </tr>



                @{
                    int i = 0;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@Convert.ToInt32(++i)</td>
                            <td>@item.Name</td>
                            <td>@item.EmailAddress</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.IsConfirmed</td>
                            <td>@item.JoinedOn</td>
                            <td>@item.UserRole.Name</td>

                            <td><a class="btn btn-success mx-3" asp-controller="User" asp-action="AddUpdateUser" asp-route-Id="@item.Id">Edit</a> <a class="btn btn-success mx-3"asp-controller="User" asp-action="DeleteUser" asp-route-Id="@item.Id">Delete</a></td>
                        </tr>
                    }
                }


            </table>
        </div>
    </div>
</div>
