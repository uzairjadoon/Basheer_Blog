@model BasherBlog.Models.PostReaction;
@{
    ViewData["Title"] = "UpdatePostReaction";
}



<div class="Container">
    <div class="row">

        

        <div class="col-md-10 border  border-danger border-4 mt-3 p-4">
            <form asp-controller="Post" asp-action="UpdatePostReaction">

                <label asp-for="PostId">Post Title </label>
                <select asp-for="PostId" class="form-control" asp-items="@ViewBag.Posts" placeholder="Enter Title">   </select>
                <span asp-validation-for="PostId" class="text-danger"></span>
                <br />
                <label asp-for="ReactionTypeId">Reaction type </label>
                <select asp-for="ReactionTypeId" class="form-control" asp-items="@ViewBag.Reactions" placeholder="Enter Short Description"></select>
                <span asp-validation-for="ReactionTypeId" class="text-danger"></span>
                <br />
                <input type="hidden" asp-for="UserId" />

                <button type="submit" class="btn btn-danger">Update PostReaction</button>


            </form>
        </div>

      
    </div>
</div>

